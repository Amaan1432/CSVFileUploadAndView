<link rel="stylesheet" type="text/css" href="/css/home.css">

<div class="box">

    <div class="home">
        <!-- main text -->
        <div class="center-text">
            <h1>Upload a File Here</h1>
            <p>Reads CSV file and displays its content in tabular form</p>
        </div>
    
        <!-- upload box -->
        <div class="container"><form action="/upload" method="post" enctype="multipart/form-data">
            <div class="input-container">
                <input type="file" id="csvFile" name="file" accept=".csv">
                <button class="upload-btn">Upload</button>
            </div>
        </form></div>
        
    </div>
    
    <!-- show uploaded files -->
    <div class="files-list home">  
        <div class="list-center-text">
            <h2>Uploaded Files</h2>
        </div>
    
        <% if(files.length==0) { %>
            <div class="no-file">No files to show!</div>
        <% } else { %>
            <table>
                <thead>
                    <tr>
                    <th>Name</th>
                    <th>Date</th>
                    <th>Time (UTC)</th>
                    <th>View</th>
                    <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(let file of files) { %>
                    <tr>
                        <td><%= file.originalname %></td>
                        <td><%= file.createdAt.toLocaleDateString() %></td>
                        <td><%= file.createdAt.toLocaleTimeString() %></td>
                        <td><a href="/file/view/<%= file.id %>" class="view-link"><i class="fa-solid fa-arrow-up-right-from-square"></i>View</a></td>
                        <td><a href="/delete/<%= file.id %>" class="delete-link"><i class="fa-regular fa-trash-can " style="color: #f00;"></i>Delete</a></td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
        <% } %>
    </div>
    

</div>